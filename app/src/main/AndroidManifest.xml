<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.softcraft.rutaxpressapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RutaXpress"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_icon_1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_1"
        android:supportsRtl="true"
        android:theme="@style/Theme.RutaXpressApp"
        tools:targetApi="31">
        <activity
            android:name=".driverView.InitialDriverActivity"
            android:exported="false" />

        <activity
            android:name=".driverView.RegisterDriverActivity"
            android:exported="false" /> <!-- Configurar HomeActivity como actividad de inicio -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavoriteRoutesActivity"
            android:exported="false" />
        <activity
            android:name=".ViewRoutesActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".LineasFilterActivity"
            android:exported="false" /> <!-- Meta-data para Google Maps API -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" /> <!-- LoginActivity sin intent-filter -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" /> <!-- Actividades adicionales -->
        <activity android:name=".InitialMapActivity" />
        <activity android:name=".SearchActivity" />
    </application>

</manifest>